<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_artisans_by_activity_type">
        <t t-call="web.external_layout">
            <div class="container">
                <h1>YTD Artisan Activities</h1>
                <main>
                    <!-- Add a conditional check for ytd_activities -->
                    <t t-if="ytd_activities">
                        <!-- Loop through each activity type -->
                        <t t-foreach="ytd_activities.items()" t-as="activity_item">
                            <h2><t t-esc="activity_item[0].replace('_', ' ').title()"/></h2>
                            <table class='table table-bordered'>
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Artisan Name</th>
                                        <th>Email</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="activity_item[1]" t-as="activity">
                                        <tr>
                                            <td><t t-esc="activity['date']"/></td>
                                            <td><t t-esc="activity['name']"/></td>
                                            <td><t t-esc="activity['email']"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>
                    </t>
                    <!-- Add a message if no activities are found -->
                    <t t-if="not ytd_activities">
                        <p>No activities found for the current year.</p>
                    </t>
                </main>
            </div>
        </t>
    </template>
</odoo>