<odoo>
    <!-- Event Space Action -->
    <record id="action_event_space_amenity" model="ir.actions.act_window">
        <field name="name">Event Space Amenities</field>
        <field name="res_model">event.space.amenity</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Event Space Action -->    
    <record id="action_event_space" model="ir.actions.act_window">
        <field name="name">Event Spaces</field>
        <field name="res_model">event.space</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <!-- Events Pending Action -->
    <record id="action_event_pending" model="ir.actions.act_window">
        <field name="name">Pending Events</field>
        <field name="res_model">event.event</field>
        <field name="view_mode">calendar,tree</field>
        <field name="context">{'default_space_id': active_id}</field>
        <field name="domain">[('space_id', '=', context.get('default_space_id'))]</field>
    </record>    
    

    <!-- Menu Items -->
    <menuitem id="menu_event_management" name="Event Management" sequence="10"/>
    <menuitem id="menu_event_event_calendar" name="Events" parent="menu_event_management" action="action_event_event_calendar" sequence="20"/>
    <menuitem id="menu_event_space" name="Spaces" parent="menu_event_management" action="action_event_space" sequence="30"/>
    <menuitem id="menu_event_space_amenity" name="Amenities" parent="menu_event_management" action="action_event_space_amenity" sequence="40"/>
</odoo>
