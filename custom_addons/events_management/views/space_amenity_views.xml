<odoo>
    <!-- Event Space Amenity Form -->
    <record id="view_event_space_amenity_form" model="ir.ui.view">
        <field name="name">event.space.amenity.form</field>
        <field name="model">event.space.amenity</field>
        <field name="arch" type="xml">
            <form string="Event Space Amenity">
              <div class="o_form_sheet_bg">
                <sheet>
                  <group>
                    <field name="name"/>
                    <field name="description"/>
                  </group>
                </sheet>                              
              </div>

              <!-- Chatter -->
              <div class="oe_chatter">
                  <field name="message_follower_ids" widget="mail_followers"/>
                  <field name="message_ids" widget="mail_thread"/>
                  <field name="activity_ids"/>
              </div>
            </form>
        </field>
    </record>
    <!-- Event Space Amenity Tree -->
    <record id="view_event_space_amenity_tree" model="ir.ui.view">
        <field name="name">event.space.amenity.tree</field>
        <field name="model">event.space.amenity</field>
        <field name="arch" type="xml">
            <tree string="Event Space Amenities">
                <field name="name"/>
            </tree>
        </field>
    </record>
</odoo>