<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="members_management.TotalsCard">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><t t-esc="props.title"/></h5>
                <p class="card-text display-4"><t t-esc="props.total"/></p>
                <a t-att-href="props.actionUrl" class="btn btn-primary">
                    View Details
                </a>
            </div>
        </div>
    </t>
</templates>
