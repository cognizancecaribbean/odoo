<odoo>
    <record id="view_res_partner_form_member" model="ir.ui.view">
        <field name="name">res.partner.form.member</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='function']" position="before">
                <field name="is_member"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Boats">
                    <field name="boat_ids" context="{'default_partner_id': active_id}">
                        <tree>
                            <field name="name"/>
                            <field name="partner_ids"/>
                            <field name="size"/>
                            <field name="engine"/>
                        </tree>
                        <form>
                            <sheet>
                                <group>
                                    <field name="name"/>
                                    <field name="partner_ids"/>
                                    <field name="size"/>
                                    <field name="engine"/>
                                </group>
                            </sheet>
                        </form>
                    </field>
                </page>
            </xpath>            
        </field>
    </record>
</odoo>
