<odoo>
    <record id="view_res_partner_form_custom" model="ir.ui.view">
        <field name="name">res.partner.form.custom</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Add custom fields to the existing form -->
            <xpath expr="//form/sheet" position="inside">
                <group>
                    <group string="Personal Information">
                        <field name="first_name"/>
                        <field name="last_name"/>
                        <field name="other_names"/>
                        <field name="date_of_birth"/>
                        <field name="marital_status"/>
                        <field name="spouse_name"/>
                    </group>
                    <group string="Contact Information">
                        <field name="phone"/>
                        <field name="mobile"/>
                        <field name="email"/>
                        <field name="office_number"/>
                    </group>
                </group>
                <group>
                    <group string="Application Information">
                        <field name="status"/>
                        <field name="application_state"/>
                        <field name="application_date"/>
                        <field name="acknowledgment_date"/>
                        <field name="interview_notice_date"/>
                        <field name="interview_date"/>
                        <field name="followup_date"/>
                        <field name="welcome_letter_date"/>
                        <field name="orientation_notice_date"/>
                        <field name="orientation_date"/>
                        <field name="bylaws_sent_date"/>
                    </group>
                </group>
            </xpath>

            <!-- Add tabs for Children, Documents, Boats, and Other Memberships -->
            <xpath expr="//notebook" position="inside">
                <page string="Children">
                    <field name="children_ids">
                        <tree>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="date_of_birth"/>
                        </tree>
                        <form>
                            <group>
                                <field name="first_name"/>
                                <field name="last_name"/>
                                <field name="date_of_birth"/>
                            </group>
                        </form>
                    </field>
                </page>
                <page string="Documents">
                    <field name="document_ids">
                        <tree>
                            <field name="name"/>
                        </tree>
                        <form>
                            <group>
                                <field name="name"/>
                            </group>
                        </form>
                    </field>
                </page>
                <page string="Boats">
                    <field name="boat_ids">
                        <tree>
                            <field name="name"/>
                            <field name="size"/>
                        </tree>
                        <form>
                            <group>
                                <field name="name"/>   
                                <field name="size"/>
                            </group>
                        </form>
                    </field>
                </page>
                <page string="Other Memberships">
                    <field name="other_memberships_ids">
                        <tree>
                            <field name="organization"/>
                            <field name="role"/>
                        </tree>
                        <form>
                            <group>
                                <field name="organization"/>
                                <field name="role"/>
                            </group>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Action for the custom form view -->
    <record id="action_res_partner_custom" model="ir.actions.act_window">
        <field name="name">Members</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <!-- <field name="view_ids" eval="[(5, 0, 0), (0, 0, {'view_mode': 'tree', 'view_id': ref('view_res_partner_tree_custom')}), (0, 0, {'view_mode': 'form', 'view_id': ref('view_res_partner_form_custom')})]"/> -->
        <field name="domain">[('status', '=', 'member')]</field>
    </record>

    <!-- Menu item for the custom form view -->
    <menuitem id="menu_res_partner_root" name="Members Management" sequence="10" />
    <menuitem id="menu_res_partner" name="Members" parent="menu_res_partner_root" action="action_res_partner_custom" sequence="10"/>    
</odoo>
