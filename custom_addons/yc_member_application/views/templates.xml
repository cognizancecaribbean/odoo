<odoo>
    <data>
        <template id="member_application_form" name="Member Application Form">
            <t t-call="website.layout">
                <div class="container">
                    <h1>Member Application Form</h1>
                    <form action="/member/application/submit" method="post" enctype="multipart/form-data">
                        <div>
                            <label for="first_name">First Name:</label>
                            <input type="text" id="first_name" name="first_name" required="required"/>
                        </div>
                        <div>
                            <label for="last_name">Last Name:</label>
                            <input type="text" id="last_name" name="last_name" required="required"/>
                        </div>
                        <div>
                            <label for="other_names">Other Names:</label>
                            <input type="text" id="other_names" name="other_names"/>
                        </div>
                        <div>
                            <label for="email">Email:</label>
                            <input type="email" id="email" name="email" required="required"/>
                        </div>
                        <div>
                            <label for="profile_picture">Profile Picture:</label>
                            <input type="file" id="profile_picture" name="profile_picture"/>
                        </div>
                        <!-- Add other form fields as necessary -->
                        <div>
                            <label for="date_of_birth">Date of Birth:</label>
                            <input type="date" id="date_of_birth" name="date_of_birth"/>
                        </div>
                        <div>
                            <label for="street_address">Street Address:</label>
                            <input type="text" id="street_address" name="street_address"/>
                        </div>
                        <div>
                            <label for="city">City / Town:</label>
                            <input type="text" id="city" name="city"/>
                        </div>
                        <div>
                            <label for="country_id">Country:</label>
                            <select id="country_id" name="country_id">
                                <t t-foreach="countries" t-as="country">
                                    <option t-att-value="country.id"><t t-esc="country.name"/></option>
                                </t>
                            </select>
                        </div>
                        <div>
                            <label for="home_number">Home Number:</label>
                            <input type="text" id="home_number" name="home_number"/>
                        </div>
                        <div>
                            <label for="office_number">Office Number:</label>
                            <input type="text" id="office_number" name="office_number"/>
                        </div>
                        <div>
                            <label for="mobile_number">Mobile Number:</label>
                            <input type="text" id="mobile_number" name="mobile_number"/>
                        </div>
                        <div>
                            <label for="marital_status">Marital Status:</label>
                            <input type="text" id="marital_status" name="marital_status"/>
                        </div>
                        <div>
                            <label for="spouse_name">Spouse Name:</label>
                            <input type="text" id="spouse_name" name="spouse_name"/>
                        </div>
                        <div>
                            <label for="has_kids">Do you have children?:</label>
                            <input type="checkbox" id="has_kids" name="has_kids"/>
                        </div>
                        <!-- Add children fields, business data, documents, boats, other memberships, etc. -->
                        <div>
                            <button type="submit">Submit</button>
                        </div>
                    </form>
                </div>
            </t>
        </template>

        <template id="thankyou" name="Thank You">
            <t t-call="website.layout">
                <div class="container">
                    <h1>Thank You!</h1>
                    <p>Your application has been submitted successfully.</p>
                </div>
            </t>
        </template>
    </data>
</odoo>
