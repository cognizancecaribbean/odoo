<odoo>
    <record id="view_member_application_form" model="ir.ui.view">
        <field name="name">member.application.form</field>
        <field name="model">member.application</field>
        <field name="arch" type="xml">
            <form string="Member Application">        
                <div class="o_form_sheet_bg">   
                    <sheet>
                        <group string="Personal Information">
                            <group>
                                <field name="first_name"/>
                                <field name="last_name"/>
                                <field name="other_names"/>
                                <field name="email"/>                            
                                <field name="marital_status"/>
                                <field name="spouse_name"/> 
                                <field name="profile_picture" widget="image" class="oe_avatar" options="{'size': [128, 128]}"/>                           
                            </group>                        
                            <group>
                                <field name="date_of_birth"/>
                                <field name="street_address"/>
                                <field name="city"/>
                                <field name="country_id"/>
                                <field name="home_number"/>
                                <field name="office_number"/>
                                <field name="mobile_number"/>
                            </group>
                        </group>
                        <group>
                            <group string="Membership Selection">
                                <field name="member_type"/>
                            </group> 
                            <group string="Record Status">
                                <field name="state" readonly="1"/>
                            </group>                    
                        </group>
                                        
                        <notebook>
                            <page string="Business Data">
                                <group>
                                    <group>
                                        <field name="business_name"/>
                                        <field name="business_street_address"/>
                                        <field name="business_city"/>
                                        <field name="business_country_id"/>
                                    </group>
                                    <group>
                                        <field name="occupation"/>
                                        <field name="nature_of_business"/>
                                    </group>                            
                                </group>                                                
                            </page>
                            <page string="Children">
                                <group>
                                    <field name="children_ids" widget="one2many_list" options="{'no_create_edit': True}" placeholder="Add a child">
                                        <tree editable="bottom">
                                            <field name="first_name"/>
                                            <field name="last_name"/>
                                            <field name="date_of_birth"/>
                                        </tree>
                                    </field>
                                </group>                        
                            </page>
                            <page string="Supporting Documents">
                                <group>
                                    <field name="document_ids" widget="one2many_list" options="{'no_create_edit': True}" placeholder="Add a document">
                                        <tree editable="bottom">
                                            <field name="name"/>
                                            <field name="file"/>
                                        </tree>
                                    </field>
                                </group>                        
                            </page>     
                            <page string="Boats">
                                <group>
                                    <field name="boat_ids" widget="one2many_list" options="{'no_create_edit': True}" placeholder="Add a boat">
                                        <tree editable="bottom">
                                            <field name="name"/>
                                            <field name="size"/>
                                            <field name="engine"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>     
                            <page string="Other Memberships">
                                <group>
                                    <field name="other_memberships_ids" widget="one2many_list" options="{'no_create_edit': True}" placeholder="Add other membership">
                                        <tree editable="bottom">
                                            <field name="organization"/>
                                            <field name="role"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>      
                        </notebook>
                    </sheet>
                    <footer>
                        <button string="Submit" type="object" name="action_submit" class="btn-primary"
                                modifiers="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button string="Accept" type="object" name="action_accept" class="btn-success"
                                modifiers="{'invisible': [('state', '!=', 'submitted')]}"/>
                        <button string="Reject" type="object" name="action_reject" class="btn-danger"
                                modifiers="{'invisible': [('state', '!=', 'submitted')]}"/>
                    </footer>                    
                </div>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                    <field name="activity_ids"/>
                </div>                 
            </form>
        </field>
    </record>

    <record id="view_member_application_tree" model="ir.ui.view">
        <field name="name">member.application.tree</field>
        <field name="model">member.application</field>
        <field name="arch" type="xml">
            <tree string="Member Applications">
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="email"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_member_application" model="ir.actions.act_window">
        <field name="name">Member Applications</field>
        <field name="res_model">member.application</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Top level menu item for the custom module -->
    <menuitem id="menu_member_application_root" name="Member Management" sequence="1"/>

    <!-- Submenu item for member applications under the custom module menu -->
    <menuitem id="menu_member_application" name="Member Applications" parent="menu_member_application_root" action="action_member_application" sequence="1"/>
</odoo>
