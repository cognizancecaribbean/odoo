<odoo>
    <!-- Kanban View for BoatSpecification -->
    <record id="view_boat_specification_kanban" model="ir.ui.view">
        <field name="name">boatyard.boat.specification.kanban</field>
        <field name="model">boatyard.boat.specification</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="o_kanban_image">
                            <img t-if="record.boat_picture.raw_value" t-att-src="'data:image/png;base64,' + record.boat_picture.raw_value" t-att-alt="record.name.value"/>
                        </div>
                        <div class="o_kanban_details">
                            <strong><field name="name"/></strong>
                            <div>Length: <field name="boat_length"/></div>
                            <div>Beam: <field name="boat_beam"/></div>
                        </div>
                        <div class="o_kanban_footer">
                            <a type="action" t-attf-href="/web#id=#{record.id}&amp;model=boatyard.boat.specification&amp;view_type=form" class="o_button">
                                View Details
                            </a>
                            <a type="action" t-attf-href="/web#id=#{record.id}&amp;model=boatyard.boat.specification&amp;view_type=tree" class="o_button">
                                View Bookings
                            </a>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Tree View for BoatSpecification -->
    <record id="view_boat_specification_tree" model="ir.ui.view">
        <field name="name">boatyard.boat.specification.tree</field>
        <field name="model">boatyard.boat.specification</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="boat_length"/>
                <field name="boat_beam"/>
                <field name="boat_draft"/>
            </tree>
        </field>
    </record>

    <!-- Form View for BoatSpecification -->
    <record id="view_boat_specification_form" model="ir.ui.view">
        <field name="name">boatyard.boat.specification.form</field>
        <field name="model">boatyard.boat.specification</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="boat_picture" widget='image'/>
                        <field name="boat_length"/>
                        <field name="boat_beam"/>
                        <field name="boat_draft"/>
                        <field name="hull_material"/>
                        <field name="boat_colors"/>
                        <field name="boat_mass"/>
                        <field name="boat_water_capacity"/>
                        <field name="boat_fuel_capacity"/>
                        <field name="boat_cellular"/>
                        <field name="boat_call_sign"/>
                        <field name="is_original_owner"/>
                        <field name="original_owner"/>
                        <field name="original_owner_street"/>
                        <field name="original_owner_city"/>
                        <field name="original_owner_country"/>
                        <field name="original_owner_date_purchased"/>
                        <field name="place_manufactured"/>
                        <field name="year_manufactured"/>
                        <field name="manufacturer_name"/>
                        <field name="country_imported_from"/>
                        <field name="date_imported"/>
                        <field name="transportation_mode"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                    <field name="activity_ids"/>
                </div>
            </form>
        </field>
    </record>   

    <!-- Action for BoatSpecification -->
    <record id="action_boatyard_boat_specification" model="ir.actions.act_window">
        <field name="name">Boat Specifications</field>
        <field name="res_model">boatyard.boat.specification</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id" ref="view_boat_specification_kanban"/>
    </record>
</odoo>