<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Kanban View for Boat Space -->
    <record id="view_boat_space_kanban" model="ir.ui.view">
        <field name="name">boatyard.boat.space.kanban</field>
        <field name="model">boatyard.boat.space</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="length"/>
                <field name="width"/>
                <field name="height"/>
                <field name="space_type"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="o_kanban_record">
                            <div class="o_kanban_details">
                                <strong>
                                    <field name="name"/>
                                </strong>
                                <div><strong>Length:</strong> <field name="length"/> m</div>
                                <div><strong>Width:</strong> <field name="width"/> m</div>
                                <div><strong>Height:</strong> <field name="height"/> m</div>
                                <div><strong>Type:</strong> <field name="space_type"/></div>
                                <div><strong>Available:</strong> <field name="is_available"/></div>
                                <button name="%(action_view_boat_space_booking_calendar)d" type="action" class="btn btn-primary mt16" t-attf-data-space-id="#{record.id.raw_value}" t-att-data-context="{'default_space_id': record.id.raw_value}">
                                    View Bookings
                                </button>                               
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Tree View for Boat Space -->
    <record id="view_boat_space_tree" model="ir.ui.view">
        <field name="name">boatyard.boat.space.tree</field>
        <field name="model">boatyard.boat.space</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="length"/>
                <field name="width"/>
                <field name="height"/>
                <field name="space_type"/>
                <field name="is_available"/>
            </tree>
        </field>
    </record>

    <!-- Form View for Boat Space -->
    <record id="view_boat_space_form" model="ir.ui.view">
        <field name="name">boatyard.boat.space.form</field>
        <field name="model">boatyard.boat.space</field>
        <field name="arch" type="xml">        
            <form>
                <div class="o_form_sheet_bg">
                    <header>
                        <button name="%(action_view_boat_space_booking_calendar)d" type="action" string="View Booking Calendar" class="oe_stat_button" icon="fa-calendar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="space_type"/>
                            </group>
                            <group>
                                <field name="length"/>
                                <field name="width"/>
                                <field name="height"/>
                            </group>                                                        
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                        <field name="activity_ids"/>
                    </div>
                </div>
            </form>
        </field>
    </record>

    <!-- Action for Boat Space -->
    <record id="action_boat_space" model="ir.actions.act_window">
        <field name="name">Boat Spaces</field>
        <field name="res_model">boatyard.boat.space</field>
        <field name="view_mode">kanbantree,form</field>
    </record>


    <!-- Boat Space Booking -->
    <record id="view_boat_space_booking_calendar" model="ir.ui.view">
        <field name="name">boatyard.boat.space.booking.calendar</field>
        <field name="model">boatyard.boat.space.booking</field>
        <field name="arch" type="xml">
            <calendar string="Boat Space Bookings" date_start="start_date" date_stop="end_date" mode="month" event_open_popup="true" color="space_id">
                <field name="boat_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="space_id"/>
                <field name="status"/>
            </calendar>
        </field>
    </record>

    <!-- Tree View for Boat Space Booking -->
    <record id="view_boat_space_booking_tree" model="ir.ui.view">
        <field name="name">boatyard.boat.space.booking.tree</field>
        <field name="model">boatyard.boat.space.booking</field>
        <field name="arch" type="xml">
            <tree>
                <field name="boat_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="space_id"/>
                <field name="status"/>
            </tree>
        </field>
    </record>    

    <!-- Form View for Boat Space Booking -->
    <record id="view_boat_space_booking_form" model="ir.ui.view">
        <field name="name">boatyard.boat.space.booking.form</field>
        <field name="model">boatyard.boat.space.booking</field>
        <field name="arch" type="xml">
            <form string="Boat Space Booking">
                <div class="o_form_sheet_bg">
                    <sheet>
                        <group>
                            <group>
                                <field name="boat_id"/>
                                <field name="space_id" context="{'default_boat_space_id': active_id}"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>                        
                                <field name="status"/>
                            </group>                                                
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                        <field name="activity_ids"/>
                    </div>
                </div>
            </form>
        </field>
    </record>    

    <!-- Boat Space Booking Calendar Action -->
    <record id="action_view_boat_space_booking_calendar" model="ir.actions.act_window">
        <field name="name">Boat Space Bookings</field>
        <field name="res_model">boatyard.boat.space.booking</field>
        <field name="view_mode">tree,form,calendar</field>
        <field name="view_id" ref="view_boat_space_booking_calendar"/>
        <field name="context">{'form_view_ref': 'boatyard_management.view_boat_space_booking_form', 'default_space_id': active_id}</field>
    </record>    
</odoo>